{
    "name": "nestjs-grpc",
    "version": "1.2.6",
    "description": "A lightweight NestJS package for type-safe gRPC communication between microservices",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "nestjs-grpc": "./dist/bin/nestjs-grpc.js"
    },
    "files": [
        "dist/**/*",
        "LICENSE",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/hmake98/nestjs-grpc.git"
    },
    "bugs": {
        "url": "https://github.com/hmake98/nestjs-grpc/issues"
    },
    "homepage": "https://github.com/hmake98/nestjs-grpc#readme",
    "scripts": {
        "clean": "rimraf dist",
        "compile": "tsc -p tsconfig.json",
        "copy-bin": "mkdir -p dist/bin && cp bin/nestjs-grpc.js dist/bin/ && chmod +x dist/bin/nestjs-grpc.js",
        "build": "npm run clean && npm run compile && npm run copy-bin",
        "build:watch": "npm run build && tsc -p tsconfig.json --watch",
        "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.js\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"bin/**/*.js\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "lint:check": "eslint \"src/**/*.ts\"",
        "test": "echo \"Add tests here\" && exit 0",
        "test:watch": "npm run test -- --watch",
        "prepare": "npm run build",
        "prepublishOnly": "npm run quality-check",
        "quality-check": "npm run lint:check && npm run format:check && npm run test && npm run build",
        "version:patch": "npm version patch --no-git-tag-version",
        "version:minor": "npm version minor --no-git-tag-version",
        "version:major": "npm version major --no-git-tag-version",
        "git:add": "git add .",
        "git:commit": "git commit -m \"chore: release v$npm_package_version\"",
        "git:tag": "git tag v$npm_package_version",
        "git:push": "git push && git push --tags",
        "publish:patch": "npm run quality-check && npm run version:patch && npm run git:add && npm run git:commit && npm run git:tag && npm publish && npm run git:push",
        "publish:minor": "npm run quality-check && npm run version:minor && npm run git:add && npm run git:commit && npm run git:tag && npm publish && npm run git:push",
        "publish:major": "npm run quality-check && npm run version:major && npm run git:add && npm run git:commit && npm run git:tag && npm publish && npm run git:push",
        "release": "npm run publish:patch",
        "release:minor": "npm run publish:minor",
        "release:major": "npm run publish:major",
        "dev:setup": "npm install && npm run build && npm link",
        "dev:clean": "npm unlink --global nestjs-grpc 2>/dev/null || true",
        "docs": "typedoc --out docs src/index.ts",
        "docs:serve": "npm run docs && npx http-server docs -p 8080 -o",
        "check:binary": "node dist/bin/nestjs-grpc.js --version",
        "validate": "npm run build && npm run check:binary && echo \"âœ… Package validation successful\""
    },
    "keywords": [
        "nestjs",
        "grpc",
        "microservices",
        "typescript",
        "protobuf",
        "rpc",
        "proto",
        "code-generation",
        "type-safe"
    ],
    "author": "hmake98",
    "license": "MIT",
    "dependencies": {
        "@grpc/grpc-js": "^1.13.3",
        "@grpc/proto-loader": "^0.7.15",
        "commander": "^13.1.0",
        "glob": "^11.0.1",
        "protobufjs": "^7.5.0"
    },
    "devDependencies": {
        "@nestjs/common": "^11.0.20",
        "@nestjs/core": "^11.0.20",
        "@nestjs/microservices": "^11.0.20",
        "@types/glob": "^8.1.0",
        "@types/node": "^22.14.1",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.5.3",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typedoc": "^0.25.12",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.15.0"
    },
    "peerDependencies": {
        "@nestjs/common": "^10.0.0 || ^11.0.0",
        "@nestjs/core": "^10.0.0 || ^11.0.0",
        "@nestjs/microservices": "^10.0.0 || ^11.0.0",
        "reflect-metadata": "^0.1.13 || ^0.2.0",
        "rxjs": "^7.0.0"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}