{
    "name": "nestjs-grpc",
    "version": "1.1.2",
    "description": "A NestJS package for type-safe gRPC communication between microservices with monitoring dashboard",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "nestjs-grpc": "./bin/nestjs-grpc.js"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "lint:check": "eslint \"src/**/*.ts\"",
        "update:packages": "npx npm-check-updates -u",
        "prepublish": "npm run build",
        "prepare": "husky",
        "version:patch": "npm version patch",
        "version:minor": "npm version minor",
        "version:major": "npm version major",
        "publish:patch": "npm run version:patch && npm publish",
        "publish:minor": "npm run version:minor && npm publish",
        "publish:major": "npm run version:major && npm publish",
        "publish:beta": "npm version prerelease --preid=beta && npm publish --tag beta",
        "publish:dev": "npm version prerelease --preid=dev && npm publish --tag dev"
    },
    "keywords": [
        "nestjs",
        "grpc",
        "microservices",
        "typescript",
        "protobuf",
        "monitoring"
    ],
    "author": "hmake98",
    "license": "MIT",
    "dependencies": {
        "@grpc/grpc-js": "^1.13.3",
        "@grpc/proto-loader": "^0.7.15",
        "chokidar": "^4.0.3",
        "commander": "^13.1.0",
        "glob": "^11.0.1",
        "protobufjs": "^7.5.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@nestjs/common": "^11.0.20",
        "@nestjs/core": "^11.0.20",
        "@nestjs/microservices": "^11.0.20",
        "@nestjs/platform-express": "^11.0.20",
        "@nestjs/platform-socket.io": "^11.0.20",
        "@nestjs/serve-static": "^5.0.3",
        "@nestjs/testing": "^11.0.20",
        "@nestjs/websockets": "^11.0.20",
        "@types/jest": "^29.5.14",
        "@types/lint-staged": "~13.3.0",
        "@types/node": "^22.14.1",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "socket.io": "^4.8.1",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.30.1"
    },
    "peerDependencies": {
        "@nestjs/common": "^10.0.0 || ^11.0.0",
        "@nestjs/core": "^10.0.0 || ^11.0.0",
        "@nestjs/microservices": "^10.0.0 || ^11.0.0",
        "@nestjs/platform-express": "^10.0.0 || ^11.0.0",
        "@nestjs/platform-socket.io": "^10.0.0 || ^11.0.0",
        "@nestjs/serve-static": "^3.0.0 || ^4.0.0",
        "@nestjs/websockets": "^10.0.0 || ^11.0.0",
        "reflect-metadata": "^0.1.13 || ^0.2.0",
        "rxjs": "^7.0.0",
        "socket.io": "^4.0.0"
    }
}
